{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Due_date</th>
                <td>{{ product.dueDate ? product.dueDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}"><button class="btn">{{ button_label|default('Back to list') }}</button></a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><button class="btn">{{ button_label|default('edit') }}</button></a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}

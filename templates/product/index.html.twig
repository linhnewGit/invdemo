{% extends 'base.html.twig' %}

{% block title %}Inventory{% endblock %}

{% block body %}
    <h1>List of product</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Due_date</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.dueDate ? product.dueDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.category.name }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"><button class="button">show</button></a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><button class="button">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <a href="{{ path('app_product_new') }}"><button class="button">Add product</button></a>
{% endblock %}
